@model StudentCrud.Models.AddStudentViewModel

<div class="container">
    <div class="row">
        <div class="col-md-6 m-auto">
            <h1>Ajouter un Eleve</h1>
                <form method="post">

                <div class="mt-3">
                    <label class="form-label">Nom</label>
                    <input type="text" class="form-control" asp-for="Name" />
                </div>
                <div class="mt-3">
                    <label class="form-label">Email</label>
                    <input type="email"  class="form-control" asp-for="Email" />
                </div>
                <div class="mt-3">
                    <label class="form-label">Phone</label>
                    <input type="text"  class="form-control" asp-for="Phone"/>
                </div>
                <div class="mt-3">

                    <input type="checkbox" id="Subscribed" class="form-check-input" asp-for="Subscribed" />
                    <label class="form-label">Subscribed</label>
                </div>
                <div class="mt-3">

                    <button type="submit" class="btn btn-primary">ajouter</button>
                </div>
                </form>
        </div>
    </div>
</div>